<h1>Edit Your Details</h1>
 

<%= form_with( model: @driver , local: true) do |form| %>
<p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :mobile %><br>
    <%= form.text_area :mobile %>
  </p>
  <p>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
  </p>
  <p>
    <%= form.label :address %><br>
    <%= form.text_area :address %>
  </p>
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', driver_path,:id => current_user.id   %>