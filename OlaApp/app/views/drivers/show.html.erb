<main role="main">
  <%= render 'layouts/messages' %>
  <h1><%=current_user.name %></h1>
  <ul>
    <li><b>Mobile:-</b><%=current_user.mobile%></li> 
    <li><b>Email:-</b><%=current_user.email%></li>
    <li><b>Address:-</b><%=current_user.address%></li>
    <li><b>City:-</b><%=City.where(id:current_user.city_id).pluck("name").first %></li>
  </ul>

  <h3>Ride History:-</h3>
  <% @ride_history.each do |ride| %>
  ======================
  	<ul>
        <li><b>Distance:-</b><%=ride.distance%></li> 
    		<li><b>From:-</b><%=ride.pickup_point%></li>
    		<li><b>To:-</b><%=ride.drop_point%></li>
    		<li><b>Status:-</b><%=ride.status%></li>
    		<li><b>User Id:-</b><%=ride.user_id%></li>
        <li><b>Amount Paid:-</b><%=Payment.where(ride_id:ride.id).pluck("total_amount").first%></li>
  	</ul>
  <% end %>
  <span class="glyphicon glyphicon-pencil"></span><%= link_to 'Edit Details', edit_driver_path, :id => current_user.id %> |
  <span class="glyphicon glyphicon-home"></span><%= link_to 'Home', drivers_path %>  
</main>
